<h1>DASHBOARD</h1>

<h2>Usuarios</h2>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Rol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Editar', edit_user_registration_path(user), class: 'btn btn-sm btn-success' %></td>
        <td> <%= link_to 'Hacer Admin', make_admin_user_path(user), method: :post, data: { confirm: '¿Estás que quieres hacer admin a este Usuario?' }, class: 'btn btn-sm btn-info' %></td>
        <td> <%= link_to 'Eliminar', user_path(user), method: :delete, data: { confirm: '¿Estás seguro que deseas eliminar el Usuario?' }, class: 'btn btn-sm btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
